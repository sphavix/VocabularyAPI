            <input type="hidden" asp-for="WordId" />
            @*<div class="form-group">
                
                <label asp-for="WordId" class="control-label"></label>
                <input asp-for="WordId" class="form-control" />
                <span asp-validation-for="WordId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="WordName" class="control-label"></label>
                <input asp-for="WordName" class="form-control" />
                <span asp-validation-for="WordName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Definition1" class="control-label"></label>
                <input asp-for="Definition1" class="form-control" />
                <span asp-validation-for="Definition1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Definition2" class="control-label"></label>
                <input asp-for="Definition2" class="form-control" />
                <span asp-validation-for="Definition2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Definition3" class="control-label"></label>
                <input asp-for="Definition3" class="form-control" />
                <span asp-validation-for="Definition3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sentence" class="control-label"></label>
                <input asp-for="Sentence" class="form-control" />
                <span asp-validation-for="Sentence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
